@model MemberSignUpForm

<form method="post" asp-controller="Auth" asp-action="SignUp" class="sign-form" novalidate>
    <h2 class="title">Create Account</h2>

    <div class="forms-group">
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">
                @ViewBag?.ErrorMessage
            </div>
        }

        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" placeholder="Your first name"/>
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" placeholder="Your last name"/>
        <span asp-validation-for="LastName"></span>

        <label asp-for="Email">Email</label>
        <input asp-for="Email" placeholder="Your email address"/>
        <span asp-validation-for="Email"></span>

        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" placeholder="Your phone number" />
        <span asp-validation-for="Phone"></span>

        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Enter your password"/>
        <span asp-validation-for="Password"></span>

        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" placeholder="Confirm your password"/>
        <span asp-validation-for="ConfirmPassword"></span>

        <div class="checkbox-container">
            <input asp-for="TermsAndConditions" type="checkbox" id="terms"/>
            <label asp-for="TermsAndConditions">
                I accept <a href="#">Terms and Conditions</a>
            </label>
        </div>

        <button type="submit">Create Account</button>

        <div class="login-link">
            <p>Already have an account? <a class="click-login" asp-controller="Auth" asp-action="SignIn">Login</a></p>
        </div>
    </div>
</form>

@await Html.PartialAsync("Partials/ScriptPartials/_ValidationScripts")