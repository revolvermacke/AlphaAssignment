<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>

    <title>@ViewData["Title"] - Alpha</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/LoggedIn.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>

@await Html.PartialAsync("Partials/_NotificationModal")

<body>
    <div class="portal">
        <div class="logotype">
            @await Html.PartialAsync("Partials/_LogoPartial")
        </div>
        <div class="side">
            @await Html.PartialAsync("Partials/_SidebarPartial")
        </div>
        <div class="top">
            <input class="search-bar" placeholder="Search...">
            <div class="top-right">
                <div class="point-it">
                    <img src="~/images/Notification.svg" alt="notifications" class="notis" onclick="toggleMenu('notificationModal')" />
                    @await Html.PartialAsync("Partials/_NotificationModal")
                </div>
                <div class="point-it">
                    <img src="~/images/settingswheel.svg" alt="settings" />
                </div>
                <div id="profile-avatar" class="profile-avatar point-it">
                    <img src="~/images/smallavatar.svg" alt="profile avatar" class="p-avatar" onclick="toggleMenu('dropdownmenu-avatar')" />
                    <div class="profile-dropdown" id="dropdownmenu-avatar">
                        <a asp-action="signOut" asp-controller="Auth">Sign Out</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
